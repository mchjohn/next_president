{
  "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./src/types"],
    "baseUrl": "./",
    "paths": {
      "@src/*": [ "./src/*"],
      "@utils/*": [ "./src/utils/*"],
      "@hooks/*": [ "./src/hooks/*"],
      "@styles/*": [ "./src/styles/*"],
      "@routes/*": [ "./src/routes/*"],
      "@contexts/*": [ "src/contexts/*"],
      "@screens/*": [ "./src/screens/*"],
      "@services/*": [ "./src/services/*"],
      "@constants/*": [ "./src/constants/*"],
      "@components/*": [ "./src/components/*"],
    }
  }
}
